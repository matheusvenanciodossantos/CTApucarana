<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CTApucarana.MainPage"
             Shell.NavBarIsVisible="false"
             BackgroundColor="Black">
             
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="170"/>
            <RowDefinition Height="85"/>
            <RowDefinition Height="85"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <Image x:Name="background"
               Source="sunup.jpg"
               Aspect="AspectFill"
               Grid.RowSpan="4"
               Grid.ColumnSpan="3"/>

       <Frame x:Name="FrameDotempo"
              HeightRequest="170"
              BackgroundColor="#80000000"
              CornerRadius="20"
              VerticalOptions="Center"
              Grid.Row="1"
              Grid.RowSpan="2"
              Margin="10">

              <Grid>

              <Label x:Name="Labeltemp"
                     TextColor="White"
                     FontSize="50"
                     VerticalOptions="Start"
                     HorizontalOptions="Start"
                     FontAttributes="Bold"/>

              <Label Text="°C"
                     TextColor="White"
                     FontSize="20"
                     VerticalOptions="Start"
                     HorizontalOptions="End"
                     FontAttributes="Bold"
                     Margin="0,10,0,0"/>

               <Label x:Name="Cidade"
                     TextColor="White"
                     FontSize="11"
                     VerticalOptions="End"
                     HorizontalOptions="Center"
                     FontAttributes="Bold"/>


                      
                     
              </Grid>       


       </Frame>

              <Frame x:Name="FrameDaChuva"
                     HeightRequest="80"
                     BackgroundColor="#80000000"
                     CornerRadius="20"
                     VerticalOptions="Center"
                     Grid.Row="1"
                     Grid.Column="1"
                     Margin="5">

              <VerticalStackLayout>

                     <Label Text="Chuva"
                            TextColor="White"
                            FontSize="11"
                            VerticalOptions="Start"
                            HorizontalOptions="Center"
                            FontAttributes="Bold"/>

                     <Label Text="Chuva:"
                            TextColor="White"
                            FontSize="8"
                            VerticalOptions="Center"
                            HorizontalOptions="Start"/>
                     
                     <Label x:Name="Rain"
                            TextColor="White"
                            FontSize="8"
                            VerticalOptions="Center"
                            HorizontalOptions="End"/>

                     <Label Text="Humidade:"
                            TextColor="White"
                            FontSize="10"
                            VerticalOptions="End"
                            HorizontalOptions="Start"/>
                     
                     <Label x:Name="Umidade"
                            TextColor="White"
                            FontSize="10"
                            VerticalOptions="End"
                            HorizontalOptions="End"/>

              </VerticalStackLayout>  

              </Frame>

            <Frame x:Name="FrameDoSol"
                     HeightRequest="80"
                     BackgroundColor="#80000000"
                     CornerRadius="20"
                     VerticalOptions="Center"
                     Grid.Row="2"
                     Grid.Column="1"
                     Margin="5">

              <VerticalStackLayout>

                  <Label Text="Sol"
                         TextColor="White"
                         FontSize="11"
                         VerticalOptions="Start"
                         HorizontalOptions="Center"
                         FontAttributes="Bold"/>

                  <Label Text="Amanhecer:"
                         TextColor="White"
                         FontSize="10"
                         VerticalOptions="Center"
                         HorizontalOptions="Start"/>

                 <Label x:Name="HoraDoAmanhecer"
                         TextColor="White"
                         FontSize="10"
                         VerticalOptions="Center"
                         HorizontalOptions="End"/>

                  <Label Text="Anoitecer:"
                         TextColor="White"
                         FontSize="10"
                         VerticalOptions="End"
                         HorizontalOptions="Start"/> 

                <Label x:Name="HoraDoAnoitecer"
                         TextColor="White"
                         FontSize="10"
                         VerticalOptions="End"
                         HorizontalOptions="End"/>

               </VerticalStackLayout>  
            </Frame>

              <Frame x:Name="FrameDoVento "
                     HeightRequest="80"
                     BackgroundColor="#80000000"
                     CornerRadius="20"
                     VerticalOptions="Center"
                     Grid.Row="1"
                     Grid.Column="2"
                     Margin="5">

              <VerticalStackLayout>

                  <Label Text="Vento"
                         TextColor="White"
                         FontSize="11"
                         VerticalOptions="Start"
                         HorizontalOptions="Center"
                         FontAttributes="Bold"/>

                 <Label Text="Força:"
                         TextColor="White"
                         FontSize="10"
                         VerticalOptions="Center"
                         HorizontalOptions="Start"/>

                 <Label x:Name="ForcaDoVento"
                         TextColor="White"
                         FontSize="10"
                         VerticalOptions="Center"
                         HorizontalOptions="End"/>

                  <Label Text="Direção:"
                         TextColor="White"
                         FontSize="10"
                         VerticalOptions="End"
                         HorizontalOptions="Start"/>

                 <Label x:Name="DirecaoDoVento"
                         TextColor="White"
                         FontSize="10"
                         VerticalOptions="End"
                         HorizontalOptions="End"/>

               </VerticalStackLayout>  
            </Frame>

            <Frame x:Name="FrameDaLua"
               HeightRequest="80"
               BackgroundColor="#80000000"
               CornerRadius="20"
               VerticalOptions="Center"
               Grid.Row="2"
               Grid.Column="2"
               Margin="5">

              <VerticalStackLayout>

                  <Label Text="Lua"
                         TextColor="White"
                         FontSize="11"
                         VerticalOptions="Start"
                         HorizontalOptions="Center"
                         FontAttributes="Bold"/>

                  <Label Text="Fase:"
                         TextColor="White"
                         FontSize="10"
                         VerticalOptions="Center"
                         HorizontalOptions="Start"/>

                 <Label x:Name="FaseDaLua"
                         TextColor="White"
                         FontSize="10"
                         VerticalOptions="Center"
                         HorizontalOptions="End"/>


               </VerticalStackLayout>  
            </Frame>

            <Frame x:Name="FrameFinal"
               HeightRequest="140"
               BackgroundColor="#80000000"
               CornerRadius="20"
               HorizontalOptions="Fill"
               VerticalOptions="End"
               Grid.Row="3"
               Grid.ColumnSpan="4"
               Margin="5">
            </Frame>



           
    </Grid>
</ContentPage>
